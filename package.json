{
	"name": "pagecount",
	"displayName": "Page Count",
	"version": "0.1.1",
	"publisher": "midgard",
	"description": "Markdown Page Count based on Word Count Example - a status bar contribution that reports out the number of words and approximated pages in a Markdown document as you interact with it.",
	"author": {
		"name": "Patrick Kranz"
	},
	"categories": [
		"Other"
	],
	"license": "SEE LICENSE IN LICENSE.txt",
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:markdown"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/LokiMidgard/vscode-pagecount.git"
	},
	"engines": {
		"vscode": "0.10.x"
	},
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"contributes": {
		"configuration": {
			"title": "Page Count",
			"properties": {
				"pagecount.pagesize_in_words": {
					"type": "number",
					"default": 250,
					"description": "The assumed number of words per page."
				},
				"pagecount.pagesize_in_lines": {
					"type": "number",
					"default": 25,
					"description": "The assumed number of lines per page. Works best with some kind of automatic linebreaking. (no softwrap)"
				},
				"pagecount.pagesize_calculation": {
					"type": "string",
					"enum": [
						"lines",
						"words"
					],
					"default": "lines",
					"description": "The used calculation method."
				},
				"pagecount.include": {
					"type": "string",
					"default": "**/*.md",
					"description": "A grob pattern of wich files to include."
				},
				"pagecount.exclude": {
					"type": "string",
					"default": "",
					"description": "A grob pattern of wich files to exclude."
				}
			}
		}
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "0.10.x"
	},
	"dependencies": {
		"minimatch": "^10.0.1"
	}
}
