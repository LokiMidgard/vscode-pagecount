{
	"name": "pagecount",
	"displayName": "Page Count",
	"version": "0.1.0",
	"publisher": "midgard",
	"description": "Markdown Page Count based on Word Count Example - a status bar contribution that reports out the number of words and approximated pages in a Markdown document as you interact with it.",
	"author": {
		"name": "Patrick Kranz"
	},
	"categories": [
		"Other"
	],
	"license": "SEE LICENSE IN LICENSE.txt",
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:markdown"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/LokiMidgard/vscode-pagecount.git"
	},
	"engines": {
		"vscode": "0.10.x"
	},
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"contributes": {
		"configuration":{
			"title": "Page Count",
			"properties": {
				"pagecount.pagesize":{
					"type":"number",
					"default":250,
					"description": "The assumed number of words per page."
				}
			}
		}
	},
	"devDependencies": {
		"vscode": "0.10.x",
		"typescript": "^1.6.2"
	}
}